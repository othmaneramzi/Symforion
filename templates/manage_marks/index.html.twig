{% extends 'base.html.twig' %}

{% block title %}Hello ManageMarksController!{% endblock %}

{% block body %}

{% block stylesheets %}
    <link href="{{ asset('css/manageMarks.css') }}" rel="stylesheet">
    <link href="{{ asset('css/styles.css') }}" rel="stylesheet">
{% endblock %}

    <h2 class="text-center mb-5 mt-5">Bonjour {{ app.user.lastname }} {{ app.user.firstname }}.</h2>

    <div class="form-new-mark">

        <div class="card shadow" style="width: 40rem;">
            <div class="card-body">
                <h3 class="card-title text-center">Ajouter une note</h3>
                <div class="row">
                    <div class="col-8 mx-auto">
                        <hr>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text">Matières: </span>
                    <select id="select-subject" class="form-select" >
                        {% for subject in subjects %}
                            <option value="{{ subject.id }}">{{ subject.name }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="row mb-3">
                    <div class="col-4">
                        <div class="input-group">
                            <span class="input-group-text">Promo: </span>
                            <select id="select-promo" class="form-select">
                                {% for promo in promos %}
                                    <option value="{{ promo.id }}">{{ promo.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="col-8">
                        <div class="input-group">
                            <span class="input-group-text">Élève: </span>
                            <select id="select-student" class="form-select">
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <div class="input-group">
                            <span class="input-group-text">Type: </span>
                            <select id="select-type" class="form-select">
                                <option value="CB">CB</option>
                                <option value="CC">CC</option>
                            </select>
                        </div>
                    </div>
                    <div class="col">
                        <div class="input-group">
                            <span class="input-group-text">Note (/20):</span>
                            <input id="mark-input" type="text" class="form-control" aria-label="Note"
                                   oninput="checkMarkInput()" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="input-group">
                            <span class="input-group-text">Coef.</span>
                            <input id="coef-input" type="text" class="form-control" aria-label="Note"
                                   oninput="checkCoefInput()"/>
                        </div>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text">Description</span>
                    <textarea id="desc-input" class="form-control" aria-label="Description"></textarea>
                </div>

                <div class="row mb-3">
                    <div class="col-4 offset-1">
                        <button type="button" id='btn-clear' class="btn btn-outline-secondary rounded-pill">Effacer les champs</button>
                    </div>

                    <div class="col-4 offset-3">
                        <button type="button" id='btn-new-mark' class="btn btn-outline-salmon rounded-pill">Ajouter la note</button>
                    </div>
                </div>

            </div>

        </div>

    </div>


<script type="text/javascript" src="{{ asset('js/manageMarks.js') }}"></script>
{% endblock %}
